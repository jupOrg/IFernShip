generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(uuid())
  name        String
  email       String  @unique
  picture     String?
  password    String
  course      String?
  role        Role
  subscribe   Subscribe[]
}

model Enterprise {
  id          String       @id @default(uuid())
  name        String
  cnpj        String
  email       String
  picture     String
  description String
  internships Internship[]
}

model Internship {
  id                   String     @id @default(uuid())
  isActive             Boolean
  course               String
  description          String
  office               String
  profissional_profile String
  work_style           WorkStyle
  weekly_workload      Int
  enterpriseId         String
  enterprise           Enterprise @relation(fields: [enterpriseId], references: [id])
  subscribe            Subscribe[]
}

model Subscribe {
  id            String     @id @default(uuid())
  userId        String
  internshipId  String
  user          User @relation(fields: [userId], references: [id])
  internship    Internship @relation(fields: [internshipId], references: [id])

  @@unique([userId, internshipId])
}

enum Role {
  student
  coordinator
}

enum WorkStyle {
  isPerson
  remote
  hybrid
}