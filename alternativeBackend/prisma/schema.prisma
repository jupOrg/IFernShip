// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  role     Role
  name     String
  email    String @unique
  picture  String
  password String
}

enum Role {
  STUDENT
  COORDINATOR
}

model Enterprise {
  id String @id @default(uuid())

  name        String
  cnpj        String
  email       String
  picture     String
  description String

  internships Internship[]
}

model Internship {
  id String @id @default(uuid())

  position String
  isActive Boolean

  enterprise   Enterprise @relation(fields: [enterpriseId], references: [id])
  enterpriseId String
}
